font-feature = -calt
font-feature = -dlig
theme = Dracula

# keybind. superはmacだとcmd
keybind = super+r=reload_config

keybind = shift+enter=text:\n
# なんなんだよいったい
keybind = alt+¥=text:\\

#keybind = ctrl+h=goto_split:left
#keybind = ctrl+j=goto_split:bottom
#keybind = ctrl+k=goto_split:top
#keybind = ctrl+l=goto_split:right

keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>ctrl+f=toggle_split_zoom

keybind = ctrl+a>ctrl+n=next_tab
keybind = ctrl+a>ctrl+p=previous_tab

keybind = super+[=goto_split:previous
keybind = super+]=goto_split:next
keybind = super+shift+[=previous_tab
keybind = super+shift+]=next_tab

window-save-state = always

quick-terminal-position = top
quick-terminal-size = 50%
quick-terminal-screen = main
quick-terminal-animation-duration = 0.2
keybind = "global:cmd+shift+ctrl+[=toggle_quick_terminal"
