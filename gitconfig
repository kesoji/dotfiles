[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    quotepath = false
    autocrlf = false
    filemode = false
[commit]
    verbose = true
[alias]
    s = status
    st = status
    ss = status -s
    sh = show
    sp = stash pop
    ci = commit
    cim = commit -m
    ciam = commit -a -m
    cia = commit -a
    ciaa = commit -a --amend
    co = checkout
    com = checkout master
    cod = checkout develop
    cos = checkout staging
    cp = cherry-pick
    pl = pull --prune --rebase
    plo = pull --prune --rabase origin master
    ps = push
    po = push origin master
    pf = push --force-with-lease
    psu = "!git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\""
    br = branch
    gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    gra = log --graph --branches --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
    unstage = reset HEAD --
    destroy = reset --hard HEAD --
    ignoreupdate = "!git rm --cached `git ls-files --full-name -i --exclude-from=.gitignore`"
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    lp = log -p
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    drag = pull --rebase
    f = "!git ls-files | grep -i"
    d  = diff
    dm = diff --patience master
    dc = diff --cached
    d1 = diff HEAD~
    d2 = diff HEAD~2
    d3 = diff HEAD~3
    alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort
    sm = submodule
    smup = submodule update --init --recursive
    fa = fetch --all
    sb = show-branch
[gui]
    encoding = utf-8
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[url "https://"]
    insteadOf = git://
[credential]
    helper = cache --timeout=3600
[include]
    path = ~/.gitconfig.local
[pager]
    log  = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
    show = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
    diff = (diff-highlight 2>/dev/null || cat) | ${PAGER:-less}
[interactive]
    diffFilter = (diff-highlight 2>/dev/null || cat)
[diff]
    compactionHeuristic = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
